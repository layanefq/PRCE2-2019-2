#include <iostream>
#include <locale.h>
#include <cstdlib>
#include <ctype.h>
using namespace std;

int iNum = 0;
int iSoma = 0;

void Somar()
{
  int i;

  for (i=1; i<=iNum;i++)
  {
    iSoma = iSoma + i;
  }
}

int main() {
    cout << "Insira um número inteiro :";
    cin >> iNum;
    Somar();
    cout << "A soma de 1 ao número escolhido é: " << iSoma;
}
